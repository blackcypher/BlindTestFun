<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jupiter.ulric.blindtestfun.HomeActivity"
    tools:showIn="@layout/activity_home">

    <ScrollView
        android:id="@+id/scroll_home_form"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#fffdfd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_current_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title_current_play"
                    android:textColor="#7e7d7d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_nb_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/nb_play"
                    android:textColor="#7e7d7d"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:background="#fffdfd"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar1"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/login_player1"
                    android:layout_below="@+id/cv_avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Dewrick"
                    android:textColor="#0d0d0d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_accept1"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="@string/bt_play" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="3dp"
                android:background="#fffdfd"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar2"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/login_player2"
                    android:layout_below="@+id/cv_avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Justine"
                    android:textColor="#0d0d0d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_accept2"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="@string/bt_play" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="3dp"
                android:background="#fffdfd"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar3"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/login_player3"
                    android:layout_below="@+id/cv_avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Pascal"
                    android:textColor="#0d0d0d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_accept3"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="@string/bt_play" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="3dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#fffdfd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_finish_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title_finish_play"
                    android:textColor="#7e7d7d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_nb_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/nb_play"
                    android:textColor="#7e7d7d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="3dp"
                android:background="#fffdfd"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar4"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/login_player4"
                    android:layout_below="@+id/cv_avatar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Justine"
                    android:textColor="#0d0d0d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_accept4"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="@string/bt_play" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="3dp"
                android:background="#fffdfd"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar5"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/login_player5"
                    android:layout_below="@+id/cv_avatar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Pascal"
                    android:textColor="#0d0d0d"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_accept5"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="@string/bt_play" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
